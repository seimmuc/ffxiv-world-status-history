{% extends "ffxivws/base.html.jinja" %}
{% from 'ffxivws/common.html.jinja' import world_history_head, world_history_section, world_favorite_button %}

{% set show_header_title = true %}
{% set main_id = 'world-main' %}

{% block head_extra %}
{{ world_history_head(js_data) }}
{% endblock %}

{% block title %}World {{ world.name }}{% endblock %}
{% block header_title %}<span class="world-title">{{ world.name }} {{ world_favorite_button(csrf_input, world.name, is_favorite, can_change_favorite, request.get_full_path()) }}</span>{% endblock %}

{% block header_extra %}
  <div id="days-range-buttons">
   {% for bname, dc in days_opt %}
    <a class="button{% if days|length - 1 == dc %} current{% endif %}" href="{{ '{u}?days={dc}'.format(u=url('world_history', kwargs={'world_name': world.name}), dc=dc) }}">{{ bname }}</a>
   {% endfor %}
  </div>
{% endblock %}

{% block main %}
  {{ world_history_section(days, world.id, today) }}
{% endblock %}